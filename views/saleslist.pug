doctype html
html
  head
    title Sales List
    style.
      /* Internal CSS styling */
      .table {
        width: 100%;
        border-collapse: collapse;
      }
      .table th, .table td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(255, 182, 193, 0.7);
      }
      .btn {
        font-size: 0.875rem;
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        text-decoration: none;
        display: inline-block;
      }
      .btn-secondary {
        background-color: #6c757d;
        color: #fff;
      }
      .btn-primary {
        background-color: #007bff;
        color: #fff;
      }
      .btn-danger {
        background-color: #dc3545;
        color: #fff;
      }
      .text-center {
        text-align: center;
      }
      .mt-5 {
        margin-top: 3rem;
      }
      .mb-4 {
        margin-bottom: 1.5rem;
      }
      .container {
        width: 90%;
        margin: 0 auto;
      }
      p {
        text-align: center;
        font-size: 1.125rem;
      }
      .btn-container {
        text-align: right;
        margin-bottom: 20px;
      }
  body
    .container
      // Button container with the dashboard button
      .btn-container
        a.btn.btn-primary(href='/dashboard') Go to Dashboard
        
      h2.text-center.mt-5.mb-4 SALES LIST
      table.table.table-striped
        thead
          tr
            th(scope='col') PRODUCE NAME
            th(scope='col') TONNAGE(KG)
            th(scope='col') AMOUNT PAID(UGX)
            th(scope='col') BUYER'S NAME
            th(scope='col') SALES AGENT
            th(scope='col') BRANCH
            th(scope='col') DATE AND TIME
            th(scope='col') ACTION
        tbody
          if sales.length 
            each sale in sales 
              tr
                td #{sale.producename}
                td #{sale.tonnage}
                td #{sale.amountpaid}
                td #{sale.buyername}
                td #{sale.salesagent}
                td #{sale.branch}
                td #{sale.datetime}
                td
                  a.btn.btn-primary.btn-sm(href='/updatesale/'+sale._id) Update
                td
                  form(method="post" action='/deletesales')
                    input(type="hidden", name="id", value=sale._id)
                    button.btn.btn-danger.btn-sm(type="submit") Delete
                td
                  a.btn.btn-secondary.btn-sm(href='/receipt/'+sale._id) View Receipt
          else
            tr
              td(colspan='9') No sales yet
