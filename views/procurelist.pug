doctype html
html
  head
    title Produce List
    style.
      /* Internal CSS styling */
      .table {
        width: 100%;
        border-collapse: collapse;
      }
      .table th, .table td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
      }
      .btn {
        font-size: 0.875rem;
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
      }
      .btn-secondary {
        background-color: #6c757d;
        color: #fff;
      }
      .btn-primary {
        background-color: #007bff;
        color: #fff;
      }
      .btn-danger {
        background-color: #dc3545;
        color: #fff;
      }
      .text-center {
        text-align: center;
      }
      .mt-5 {
        margin-top: 3rem;
      }
      .mb-4 {
        margin-bottom: 1.5rem;
      }
      .container {
        width: 90%;
        margin: 0 auto;
      }
      p {
        text-align: center;
        font-size: 1.125rem;
      }
  body
    .container
      h2.text-center.mt-5.mb-4 Produce List
      table.table.table-striped
        thead
          tr
            th(scope='col') Produce Name
            th(scope='col') Store Branch
            th(scope='col') Tonnage (Kg)
            th(scope='col') Produce Cost per Kg(UGX)
            th(scope='col') Produce Source
            th(scope='col') Contact
            th(scope='col') Selling Price per Kg(UGX)
            th(scope='col') Date
            th(scope='col') Action
        tbody
          if produces.length
            each produce in produces
              tr
                td #{produce.producename}
                td #{produce.branch}
                td #{produce.tonnage}
                td #{produce.cost}
                td #{produce.source}
                td #{produce.contact}
                td #{produce.price}
                td #{produce.dateTime}
                td
                  a.btn.btn-primary.btn-sm(href='/updateProduce/'+produce._id) Update
                td
                  form(method="post" action='/deleteProduce')
                    input(type="hidden", name="id", value=produce._id)
                    button.btn.btn-danger.btn-sm(type="submit") Delete
          else
            tr
              td(colspan='8') No produce yet :
