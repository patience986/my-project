doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sales Form
  link(rel='stylesheet' href='/css/salesrecords.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
header
  h1 Happy Hoe Grocery Ltd.
nav
  a(href='dashboard.html') Dashboard
  a(href='stockmanagement.html') Stock Management
  a(href='salesrecords.html') Sales Records
  a(href='creditsales.html') Credit Sales
  a(href='receipt.html') receipt
  a(href='logout.html') Logout
.form-container
  h1.h1 Sales Form
  form#myForm(action="/updatesale?id="+ sale_id  method="post")
    label(for='productName') Produce name:
    input#productName(type='text' name='productname' )
    span#productNameError.error
    label(for='tonnage') Tonnage (kg):
    input#tonnage(type='number' name='tonnage'  )
    span#tonnageError.error
    label(for='amountPaid') Amount Paid (UgX):
    input#amountPaid(type='number' name='amountpaid' )
    span#amountPaidError.error
    label(for='buyerName') Buyer&apos;s Name:
    input#buyerName(type='text' name='buyername' )
    span#buyerNameError.error
    label(for='salesAgent') Sales Agent:
    input#salesAgent(type='text' name='salesagent')
    span#salesAgentError.error
    label(for='branch') branch:
    input#salesAgent(type='text' name='branch' )
    span#salesAgentError.error
    label(for='dateTime') Date and Time:
    input#dateTime(type='datetime-local' name='datetime' )
    span#dateTimeError.error
    input(type='submit' value='Submit')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
script(src='salesrecords.js')
